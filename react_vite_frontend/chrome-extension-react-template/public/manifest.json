{
    "manifest_version": 3,
    "name": "InterfaceAI MVP",
    "version": "0.1.0",
    "description": "Minimal Chrome extension frontend for InterfaceAI",
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["tabs"],
    "host_permissions": ["http://localhost:5000/*"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["chatPanel.html"],
        "matches": ["<all_urls>"]
      }
    ]
}