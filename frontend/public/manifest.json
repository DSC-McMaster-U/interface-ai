{
  "manifest_version": 3,
  "name": "InterfaceAI MVP",
  "version": "0.1.0",
  "description": "Chrome extension for InterfaceAI",
  "action": {
    "default_title": "InterfaceAI - Click to activate",
    "default_icon": "logo_128px.svg"
  },
  "icons": {
    "128": "logo_128px.svg"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["http://localhost:5000/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle InterfaceAI overlay"
    },
    "open-settings": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Open InterfaceAI settings"
    }
  }
}
