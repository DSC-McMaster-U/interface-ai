{
  "manifest_version": 3,
  "name": "InterfaceAI MVP",
  "version": "0.1.0",
  "description": "Minimal Chrome extension frontend for InterfaceAI",
  "action": {
    "default_popup": "popup.html",
    "default_title": "InterfaceAI"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js", "autonomous_executor.js"],
      "run_at": "document_idle"
    }
  ]
}
