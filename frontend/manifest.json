{
  "manifest_version": 3,
  "name": "InterfaceAI MVP",
  "version": "0.1.0",
  "description": "Minimal Chrome extension frontend for InterfaceAI",
  "action": {
    "default_popup": "popup.html",
    "default_title": "InterfaceAI"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>", "http://localhost:5000/*"]
}
